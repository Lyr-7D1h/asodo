<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ninja">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:name=".Domain.util.ContextProvider">
        <activity android:name=".Controllers.MainActivity" />
        <activity android:name=".Controllers.loginscreen.RegActivity" />
        <activity android:name=".Controllers.loginscreen.LogActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controllers.Routetracking.Startroute"></activity>
        <activity android:name=".Controllers.Routetracking.Route"></activity>
        <activity android:name=".Controllers.Routetracking.Endroute"></activity>
        <activity android:name=".Controllers.Stats.Stats"></activity>
        <activity android:name=".Controllers.ExportActivity" />

        <activity
            android:name=".Controllers.Stats.ItemListActivity"
            android:noHistory="true"/>


        <activity
            android:name=".Controllers.Stats.ItemDetailActivity"

            android:parentActivityName=".Controllers.Stats.ItemListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controllers.Stats.ItemListActivity" />
        </activity>

    </application>

</manifest>